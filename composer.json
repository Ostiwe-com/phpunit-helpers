{
    "name": "ostiwe-com/phpunit-helpers",
    "description": "Хелперы для phpunit тестов",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ostiwe",
            "email": "admin@ostiwe.com"
        }
    ],

    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "discard-changes": true,
        "archive-format": "zip",
        "platform": {
            "php": "7.2.5"
        }
    },
    "prefer-stable": true,
    "minimum-stability" : "dev",

    "require": {
        "php": ">=7.2.5"
    },

    "autoload": {
        "psr-4": {
            "Ostiwe\\PhpUnitHelpers\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    }
}
